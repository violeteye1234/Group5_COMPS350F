<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: white;
            display: flex;
            flex-direction: row; 
            justify-content: flex-start;
            align-items: flex-start;
            height: 100vh;
            margin: 0;
        }
        .flex-grid {
            background-color: black;
            height: 100vh;
            width: 16em;
        }
        .side-by-side {
            display: flex;
            flex-direction: column; 
        }
        .sideButton {
            background-color: black;
            color: white;
            border: none;
            margin-top: 0.5em;
            text-align: center;
            font-size: 20px;
            width: 100%;
            height: 90px;
        }
        .animals-list {
            margin-left: 3em;
            width: 68em;
            background-color: #D9D9D9;
            padding: 1em;
            border-radius: 8px;
        }
        .animal-item {
            margin: 1em 0;
            padding: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="side-by-side">
        <div class="flex-grid">
            <div><a href='/view'><button class="sideButton">View</button></a></div>
            <div><a href='/report'><button class="sideButton">Report</button></a></div>
            <div><a href='/history'><button class="sideButton" style="background-color: #4386EC;">History</button></a></div>
            <div><a href='/help'><button class="sideButton">Help</button></a></div>
            <div><a href='/information'><button class="sideButton">Information</button></a></div>
            <div>
                <img src="/images/exit.png" style="width: 5em;height: auto; margin-left:4.5em; margin-top: 12em;" onclick="someFunction();">
            </div>
        </div>
    </div>
    <div>
        <h1 style="margin-left: 1.5em;">Animal History</h1>
        <div class="animals-list">
    		<h2>Total Animals: <%= nAnimals %></h2>
    		<% for (var animal of animals) { %>
        	<div class="animal-item">
            	<h3>Breed: <%= animal.breed %></h3>
           	<p>ID: <%= animal._id %></p>
            	<form action="/delete" method="POST" style="display:inline;">
                	<input type="hidden" name="_id" value="<%= animal._id %>">
                	<button type="submit">Delete</button>
		    </form>
		</div>
	    <% } %>
	</div>
    </div>
</body>
</html>
