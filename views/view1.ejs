<!DOCTYPE html>
<html>
    <head>
        <style>
            body {
            background-color: white;
            display: flex;
            flex-direction: row; 
            height: 100vh;
            margin: 0;
            padding: 0;
            }
                
            .flex-grid {
            background-color: black;
            width: 16em;
            position: fixed;
            height: 100%;
            left: 0;
            top: 0;
            overflow-y: auto;
            }
                
            .side-by-side {
            margin-left: 16em;
            width: calc(100% - 16em);
            display: flex;
            justify-content: center;
            align-items: flex-start;
            }

            .sideButton {
                background-color: black;
                color: white;
                border: none;
                margin-top: 0.5em;
                text-align: center;
                font-size: 20px;
                width: 100%;
                height: 90px;
            }
            
            .animal-details {
                width: 80%;
                margin-top: 4em;
                font-size: 1.5em;
                gap: 1em;
            }

            .animal-card {
                border: 2px solid #4386EC;
                border-radius: 8px;
                padding: 1em;
                box-shadow: 0 0 10px black;
            }

            h1 {
                text-align: center;
            }

            .update-button {
                background-color: #4386EC;
                color: white;
                border: none;
                padding: 0.5em 1em;
                border-radius: 5px;
                cursor: pointer;
                text-align: center;
                font-size: 1em;
            }

            .update-button:hover {
                background-color: #346AB0;
            }
        </style>
    </head>
    <body>
        <div class="side-by-side">
            <div class="flex-grid">
                <div>
                    <a href="/view">
                        <button class="sideButton" style="background-color: #4386EC;">View</button>
                    </a>
                </div>
                <div>
                    <a href="/report">
                        <button class="sideButton">Report</button>
                    </a>
                </div>
                <div>
                    <a href="/history">
                        <button class="sideButton">History</button>
                    </a>
                </div>
                <div>
                    <a href="/help">
                        <button class="sideButton">Help</button>
                    </a>
                </div>
                <div>
                    <a href="/information">
                        <button class="sideButton">Information</button>
                    </a>
                </div>
                <div>
                    <img src="/images/exit.png" style="width: 5em;height: auto; margin-left:4.5em; margin-top: 12em;" onclick="someFunction();">
                </div>
            </div>


            <div class="animal-details">
                <h1>Animal Details</h1>
                <% for (var animal of variable1) { %>
                <div class="animal-card">
                    <h2>Animal Name: <%= animal.Animal_name %></h2>
                    <p><strong>ID:</strong> <%= animal._id %></p>
                    <p><strong>Type:</strong> <%= animal.Type %></p>
                    <p><strong>Breed:</strong> <%= animal.Breed %></p>
                    <p><strong>Gender:</strong> <%= animal.Gender %></p>
                    <p><strong>Location:</strong> <%= animal.Location %></p>
                    <p><strong>Prominent Features:</strong> <%= animal.Prominent_Features %></p>
                    <p><strong>Disabilities:</strong> <%= animal.Disabilities %></p>
                    <p><strong>Adopted:</strong> <%= animal.Adopted %></p>
                    <p><strong>Time:</strong> <%= animal.Time %></p>
                    <p><strong>Upload Image:</strong></p>
                    <% if (animal.Upload_Image && animal.Upload_Image.data) { %>
                        <img src="data:<%= animal.Upload_Image.contentType %>;base64,<%= animal.Upload_Image.data.toString('base64') %>" alt="Image of <%= animal.Animal_name %>" style="width: 100px;">
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>

                    <form action="/update/<%= animal._id %>" method="GET">
                    <button type="submit" class="update-button">Update</button>
                    </form>

                    <hr>
                </div>
                <% } %>
            </div>
	    </div>
    </body>
</html>